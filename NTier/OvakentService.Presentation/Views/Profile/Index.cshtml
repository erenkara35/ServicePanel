@model ResultAppUserDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-4">
                <div class="row mb-5">

                    <div class="col-md-12">
                        <div class="border w-100 p-4 rounded mb-2 d-flex">
                            <div class="icon mr-3">
                                <span class="icon-map-o"></span>
                            </div>
                            <p><span>Sayın <b>@ViewBag.userInfo</b></span><span>Bilgilerinizi yan ekrandan güncelleyebilirsiniz.</span></p>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-8 block-9 mb-md-5">
                <form method="post" class="bg-light p-5 contact-form">
                    <div class="form-group">
                        <label>Adınız</label>
                        <input required="" type="text" asp-for="Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Soyadınız</label>
                        <input required="" type="text" asp-for="Surname" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Kullanıcı Adınız</label>
                        <input required="" type="text" asp-for="Username" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Email Adresiniz</label>
                        <input required="" type="email" asp-for="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Departman</label>
                        <input required="" type="text" asp-for="Department" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Ünvan</label>
                        <input required="" type="text" asp-for="Tittle" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Şirket</label>
                        <input required="" type="text" asp-for="Company" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Dahili Telefon</label>
                        <input required="" type="text" asp-for="Dahili" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Cep Telefonu</label>
                        <input required="" type="text" asp-for="CepTel" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Kısa Kod</label>
                        <input required="" type="text" asp-for="KisaKod" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Şifre</label>
                        <input required="" type="password" asp-for="Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Şifre Tekrar</label>
                        <input required="" type="password" asp-for="ConfirmPassword" class="form-control">
                    </div>
                    <input type="submit" value="Güncelle" />
                </form>

            </div>
        </div>
    </div>
</section>