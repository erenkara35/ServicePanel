@model ConfirmMailViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <title>Yeni Kullanıcı Kaydı</title>

    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="keywords" content="Existing Login Form Widget Responsive, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design">
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //Meta-Tags -->

    <link href="~/register/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />

    <!-- Style -->
    <link rel="stylesheet" href="~/register/css/style.css" type="text/css" media="all">

    <!-- Fonts -->
    <link href="//fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">
    <!-- //Fonts -->

</head>
<body>

    <h1>Ovakent Servis Kayıt Formu</h1>

    <div class="w3layoutscontaineragileits">
        <h2 style="font-size:medium">Yeni Personel : @ViewBag.v</h2>
        <form method="post">
            <label style="color:white; font-size:larger" for="authCode">Lütfen mail adresinize gelen 6 haneli kodu girin</label>
            <br /><br />
            <input type="text" required="" value="@ViewBag.v" asp-for="Mail">
            <br /><br />
            <input required="" id="authCode" type="text" asp-for="ConfirmCode" placeholder="Lütfen Doğrulama Kodunuzu Giriniz">

            <div class="text-white" asp-validation-summary="ModelOnly"></div>

            <br /><br />

            <div class="aitssendbuttonw3ls">

                @* <button class="btn btn-primary">Hesabı Aktifleştir</button> *@
                <input type="submit" value="Aktifleştir" />

            </div>
        </form>
    </div>
    <div class="w3footeragile">
        <p> &copy; @DateTime.Now.Year Ovakent ~ Billas Giriş Paneli. Tüm Hakları Saklıdır | Design by <a href="http://w3layouts.com" target="_blank">BT Department</a></p>
    </div>
    <script type="text/javascript" src="~/register/js/jquery-2.1.4.min.js"></script>
    <script src="~/register/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });

        });
    </script>
</body>
</html>