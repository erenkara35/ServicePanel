@model CreateAppUserDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<!-- Head -->
<head>

    <title>Ovakent - Yeni Kullanıcı Kaydı</title>

    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="keywords" content="Existing Login Form Widget Responsive, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design">
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //Meta-Tags -->

    <link href="~/register/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />

    <!-- Style -->
    <link rel="stylesheet" href="~/register/css/style.css" type="text/css" media="all">

    <!-- Fonts -->
    <link href="//fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">
    <!-- //Fonts -->

</head>
<!-- //Head -->
<!-- Body -->
<body>

    <h1>Ovakent Servis Kayıt Formu</h1>

    <div class="w3layoutscontaineragileits">
        <h2>Yeni Personel</h2>
        <form method="post">
            <input type="text" asp-for="Name" placeholder="Adınız" required="">
            <input type="text" asp-for="Surname" placeholder="Soyadınız" required="">
            <input type="text" asp-for="Username" placeholder="Kullanıcı Adınız" required="">
            <input type="email" asp-for="Email" placeholder="Mail Adresiniz" required="">

            <select asp-for="Company" placeholder="Şirket Seçiniz" required="">
                <option value="Ovakent">Ovakent</option>
                <option value="Billas">Billas</option>
            </select>
            <select asp-for="Department" placeholder="Departman Seçiniz" required="">
                <option value="Muhasebe">Muhasebe</option>
                <option value="Finans">Finans</option>
                <option value="Yönetim">Yönetim</option>
                <option value="Bilgi İşlem">Bilgi İşlem</option>
                <option value="Satış">Satış</option>
                <option value="İK">İnsan Kaynakları</option>
                <option value="Satınalma">Satınalma</option>
                <option value="Depo">Depo</option>
                <option value="İdari İşler">İdari İşler</option>
                <option value="Bakım">Bakım</option>
                <option value="Üretim">Üretim</option>
                <option value="Yemekhane">Yemekhane</option>
                <option value="İhracat">İhracat</option>
            </select>

            <input type="text" asp-for="Tittle" placeholder="Pozisyonunuz" required="">
            <input type="text" asp-for="CepTel" placeholder="Cep Teleefonunuz" required="">
            <input type="text" asp-for="KisaKod" placeholder="Kısa Kodunuz" required="">
            <input type="text" asp-for="Dahili" placeholder="Dahili Kodunuz" required="">
            <input type="password" asp-for="Password" placeholder="Şifreniz" required="">
            <input type="password" asp-for="ConfirmPassword" placeholder="Şifrenizi Tekrar Giriniz" required="">
            <div class="text-white" asp-validation-summary="ModelOnly"></div>
            <br /><br />
            <ul class="agileinfotickwthree">
                <li>
                    <input type="checkbox" id="brand1" value="">
                    <label for="brand1"><span></span>Kullanım Şartlarını Okudum</label>
                    <a href="/Login/Index/">Bir Hesabınız Var mı?</a>
                </li>
            </ul>
            <div class="aitssendbuttonw3ls">
                <input type="submit" value="Kayıt Ol">
                <p> Ovakent Web Sitesi İçin <span>→</span> <a class="w3_play_icon1" href="https://www.Ovakent.com.tr"> Ovakent </a></p>
                <p> Billas Web Sitesi İçin <span>→</span> <a class="w3_play_icon1" href="https://www.Billas.com.tr"> Billas </a></p>
                <div class="clear"></div>
            </div>
        </form>
    </div>


    <div class="w3footeragile">
        <p> &copy; @DateTime.Now.Year Ovakent ~ Billas Kayıt Paneli. Tüm Hakları Saklıdır | Design by <a href="https://www.Ovakent.com.tr" target="_blank">BT Department</a></p>
    </div>

    <script type="text/javascript" src="~/register/js/jquery-2.1.4.min.js"></script>

</body>
<!-- //Body -->

</html>