@model List<ResultCarDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <a href="/AdminCar/CreateCar/" class="btn btn-outline-success">Yeni Araç Ekle</a><br /><br />
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Listesi</h4>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr style="text-align:center">
                                        <th>Araç Resmi</th>
                                        <th>Plaka</th>
                                        <th>Marka ~ Model</th>
                                        <th>Araç Yüklü Ağırlığı</th>
                                        <th>Araç Tip 1</th>
                                        <th>Araç Tip 2</th>
                                        <th>Araç Sınıfı</th>
                                        <th>Lokasyonu</th>
                                        <th>Logo</th>
                                        <th>Araç Personeli</th>
                                        <th>Yılı</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr style="text-align:center">
                                            <td align="center" valign="middle">
                                                <img src="@item.ImageUrl" style="border-radius: 7px;border:1px; solid #bbb9b9; max-width:145px; max: 275px;" />
                                            </td>
                                            <td align="center">@item.Plate</td>
                                            <td align="center">@item.Brand @item.CarModel</td>
                                            <td align="center">@item.Weight</td>
                                            <td align="center">@item.CarType1</td>
                                            <td align="center">@item.CarType2</td>
                                            <td align="center">@item.CarClass</td>
                                            <td align="center">@item.Location</td>
                                            <td align="center">@item.Logo</td>
                                            <td align="center">@item.Username</td>
                                            <td align="center">@item.ModelYear</td>
                                            <td><a href="/AdminCar/UpdateCar/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/AdminCar/RemoveCar/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminCar/CreateCar/" class="btn btn-outline-success">Yeni Araç Ekle</a><br /><br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
